<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraintLayoutActivityMiniSelect"
	android:background="@color/colorBlack"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal"
	tools:context=".controllers.ActivityMiniSelect">

	<ImageView
		android:id="@+id/imageViewBackgroundMiniSelect"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/colorBlack"
		android:scaleType="fitCenter"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/main_background" />

	<Button
		android:id="@+id/buttonSelectOk"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:text="@string/buttonSelectOk"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
	/>

	<TextView
		android:id="@+id/TextViewCm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/colorBlackAlpha"
		android:textColor="@color/colorWhite"
		android:text="@string/cm"
		android:textSize="32dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>

</android.support.constraint.ConstraintLayout>
