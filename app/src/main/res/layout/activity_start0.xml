<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraintLayoutStart0"
	android:background="@color/colorBlack"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal"
	tools:context=".controllers.ActivityStart0">

	<ImageView
		android:id="@+id/imageViewBackStart"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/colorBlack"
		android:scaleType="fitCenter"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/title"
	/>

	<ImageView
		android:id="@+id/imageViewString"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:scaleType="fitCenter"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/title_touch_string"
	/>

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="5" />

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0">

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1" />

			<Button
				android:id="@+id/buttonToExplanation"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:fontFamily="sans-serif"
				android:text="@string/buttonToExplanation"
				android:textSize="24dp"
				android:visibility="invisible"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1">

			</TableRow>

			<Button
				android:id="@+id/buttonToStartGame"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:fontFamily="sans-serif"
				android:text="@string/buttonToStartGame"
				android:textSize="24dp"
				android:visibility="invisible"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1">

			</TableRow>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1" />
	</TableLayout>


</android.support.constraint.ConstraintLayout>
